<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema personalizado com ActionBar e cores -->
    <style name="Theme.WeMovies" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cores principais -->
        <item name="colorPrimary">@color/color_theme</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/color_theme</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>

        <!-- Centraliza o título da ActionBar -->
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <!-- Estilo para centralizar o título da ActionBar -->
    <style name="ActionBarTitleStyle">
        <item name="android:gravity">center</item> <!-- Centraliza o título -->
        <item name="android:textAlignment">center</item> <!-- Alinha o texto ao centro -->
    </style>
</resources>